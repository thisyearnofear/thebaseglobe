{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "bash ./build.sh",
                "outputDirectory": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/audio/(.*)",
            "headers": {
                "Content-Type": "audio/mpeg",
                "Cache-Control": "public, max-age=31536000"
            },
            "dest": "/audio/$1"
        },
        {
            "src": "/(.*)\\.js",
            "headers": {
                "Content-Type": "application/javascript"
            },
            "dest": "/$1.js"
        },
        {
            "src": "/(.*)\\.css",
            "headers": {
                "Content-Type": "text/css"
            },
            "dest": "/$1.css"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}